{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "php",
            "request": "launch",
            "name": "Launch PHP File",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "port": 9000
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open HTML or PHP File with Chrome",
            "url": "http://localhost:5500/${relativeFile}", // Updated to launch using Live Server
            "webRoot": "${workspaceFolder}"
        }
    ]
}